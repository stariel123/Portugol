programa
{
	funcao inicio()
	{
		
	      //declaração de variaveis
		inteiro a, soma, sub

		escreva("-----------------\n")
		escreva("Digite um número:")
		escreva("\n-----------------\n")
		leia(a)	
			

		soma = a + 1 // Soma os dois valores
		sub  = a - 1 // Subtrai os dois valores

          escreva("\n--------RESULTADO--------\n")
		escreva("O sucessor é:" + soma + "\n")
		escreva("E o antecessor é:" + sub + "\n")
        

	}
	
}

